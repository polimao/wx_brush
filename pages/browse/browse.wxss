navigator {
    text-indent: 20rpx;
    position: relative;
}
navigator text{
    position: absolute;
    right: 20rpx;
    top: 0rpx;
}

image{
    width: 50rpx;
    position: relative;
    top:20rpx; 
    padding-right: 15rpx;
}

.pit_button {
    border: none;
}

.screen {
    padding: 30rpx 0;
}

.screen navigator {
    height: 200rpx;
    line-height: 200rpx;
    background-color: #eee;
}

.seen {
    height: 250rpx;
    background-color: #eee;
    margin: 30rpx 0;
    padding: 10rpx 0;
}

.seen navigator {
    height: 80rpx;
    display: block;
    line-height: 80rpx;
    background-color: #eee;
}

.seen .lmp {
    padding-left: 50rpx;
}

.seen .lmp navigator {
    width: 100%;
    box-sizing: border-box;
    border-top: 1px solid #1296db;
}

.seen navigator:first-child{
    border-top: none;
}

.ban,.add {
    height: 80rpx;
    background-color: #eee;
    margin: 30rpx 0;
    padding: 10rpx 0;
    line-height: 80rpx;
}