#movie-box {
    width: 100%;
    display: flex;
    justify-content: space-between;
    flex-flow: row wrap;
    margin-top: 80rpx;
}

#movie-box .movie-item {
    margin: 10rpx 30rpx;
    align-items: center;
    /* border: 1px solid red; *//* width:200rpx; */
    width: 25%;
    font-size: 20rpx;
    line-height: 30rpx;
    float: left;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    position: relative;
}

#movie-box .movie-item .movie-image {
    height: 272rpx;
    /* box-shadow: 0rpx 0rpx 1rpx red; */
}

#movie-box .movie-item .movie-image image {
    width: 100%;
    height: 100%;
    /* height: 272rpx;  */
}

#movie-box .movie-item .movie-checkbox {
    position: absolute;
    right: -4rpx;
    bottom: 46rpx;
    display: block;
    /* opacity:0.6;  */
}

